        <ImageBrush x:Name="GreenBrush" ImageSource="Assets/SolveDot.png"/>
        <ImageBrush x:Name="BordercrumbBrush" ImageSource="Assets/BorderDot.png"/>
        <ImageBrush x:Name="SolveBrush" ImageSource="Assets/BreadcrumbDot.png"/>
