<Page
    x:Class="Memory.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Memory"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:gaze="using:Microsoft.Research.Input.Gaze"
    gaze:GazeApi.IsGazeEnabled="True"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontSize" Value="64" />
            <Setter Property="FontFamily" Value="Webdings" />
        </Style>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button x:Name="button_0_0" Tag="0" Grid.Row="0" Grid.Column="0" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_0_1" Tag="1" Grid.Row="0" Grid.Column="1" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_0_2" Tag="2" Grid.Row="0" Grid.Column="2" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_0_3" Tag="3" Grid.Row="0" Grid.Column="3" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_1_0" Tag="4" Grid.Row="1" Grid.Column="0" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_1_1" Tag="5" Grid.Row="1" Grid.Column="1" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_1_2" Tag="6" Grid.Row="1" Grid.Column="2" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_1_3" Tag="7" Grid.Row="1" Grid.Column="3" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_2_0" Tag="8" Grid.Row="2" Grid.Column="0" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_2_1" Tag="9" Grid.Row="2" Grid.Column="1" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_2_2" Tag="10" Grid.Row="2" Grid.Column="2" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_2_3" Tag="11" Grid.Row="2" Grid.Column="3" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_3_0" Tag="12" Grid.Row="3" Grid.Column="0" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_3_1" Tag="13" Grid.Row="3" Grid.Column="1" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_3_2" Tag="14" Grid.Row="3" Grid.Column="2" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="button_3_3" Tag="15" Grid.Row="3" Grid.Column="3" Click="OnButtonClick" Style="{StaticResource ButtonStyle}"/>
    </Grid>
</Page>
